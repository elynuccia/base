{% extends 'base.html.twig' %}

{% block title %}List of ODRs{% endblock title %}

{% block stylesheets %}
    {{ parent() }}
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href={{ asset('css/bootstrap.css') }} >
    <!-- Material Design Bootstrap -->
    <link rel="stylesheet" href={{ asset('css/mdb.css') }} >
    <!-- Your custom styles (optional) -->


    <link rel="stylesheet" href={{ asset('css/bootstrap.min.css') }} >
    <link rel="stylesheet" href={{ asset('css/mdb.min.css') }} >

{% endblock %}

{% block main %}
 <div class="container-fluid">

        <!--Section: Analytical panel-->
        <section class="mb-5">

            <!--Card-->
            <div class="card card-cascade narrower">

                <!--Section: Chart-->
                <section>

                    <!--Grid row-->
                    <div class="row">

                        <!--Grid column-->
                        <div class="col-12 mr-0">

                            <!--Card image-->
                            <div class="view view-cascade gradient-card-header primary-color">
                                <h4 class="h4-responsive mb-0 font-weight-bold">ODRs List</h4>
                            </div>
                            <!--/Card image-->

                            <!--Card content-->
                            <div class="card-body card-body-cascade pb-0 ">


    {% for single_odr in odr %}
         <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-10">
        <b>ODR #{{ single_odr.id }}</b>
     {% for minorAndMajor in single_odr.minorAndMajorBehaviors %}
            {{ minorAndMajor.name}}
        {% endfor %}
        {% for location in single_odr.locations %}
            {{ location.name }}
        {% endfor %}

        {{ single_odr.note }}
        {{ single_odr.fillInDate }}
        </div>
          <div class="col-md-1"></div>
      </div>
    {% endfor %}

<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
    <canvas id="myChart"></canvas>
        </div>
    <div class="col-md-1"></div>

</div>
    </div>
    <!--/.Card content-->

    </div>
    <!--Grid column-->


    </div>
    <!--Grid row-->

    </section>
    <!--Section: Chart-->

    </div>
    <!--/.Card-->

    </section>
    <!--Section: Analytical panel-->
{% endblock %}

{% block javascripts %}
    {{ parent () }}
    <script>

        var ctx = document.getElementById("myChart").getContext('2d');

        var myChart = new Chart(ctx, {
            type: 'horizontalBar',
            data: {

                labels: [{% for behavior in minMaj %}"{{ behavior.name }}"{% if loop.index != minMaj | length %},{% endif %}{% endfor %}],
                datasets: [{
                    label: '# of ODR',
                    data: [{% for behavior in minMaj %}"{{ behavior.countODR }}"{% if loop.index != minMaj | length %},{% endif %}{% endfor %}],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255,99,132,1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    xAxes: [{
                        ticks: {
                            beginAtZero:true,
                            stepSize: 1


                        }
                    }]
                }
            }
        });
    </script>
{% endblock %}