{% extends 'base.html.twig' %}

{% block title %}POR{% endblock title %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href={{ asset('css/bootstrap.min.css') }} >
    <link rel="stylesheet" href={{ asset('css/mdb.min.css') }} >
    <!-- Your custom styles (optional) -->

    <link rel="stylesheet" href={{ asset('css/bootstrap.css') }} >

{% endblock %}

{% block main %}

    <div class="container-fluid">

        <!--Section: Inputs-->
        <section class="section card mb-5">

            <div class="card-body" >

                <!--Section heading-->
                <h1 class="text-center my-5 h1">Positive Office Referral</h1>



                {{ form_start(form) }}

                <div class="row">
                    <div class="col-md-6">
                        <h4>Student: {{ form_row(form.student) }}
                        </h4>
                    </div>
                    <div class="col-md-3">
                    </div>
                    <div class="col-md-3">

                        {{ form_row(form.fillInDate) }}


                    </div>
                </div>


                <div class="row">
                    <div class="col-md-12">
                        {{ form_row(form.positiveBehaviors) }}
                    </div>

                </div>

                <div class="row">
                    <div class="col">
                        {{ form_row(form.note) }}

                    </div>
                    <div class="col-6">
                    </div>
                    <div class="col">
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                    </div>
                    <div class="col">
                        <!-- <h4>Teacher:</h4>-->
                    </div>

                </div>
                <div class="col-sm-10">{{ form_row(form.submit)}}</div>


                {{ form_end(form) }}

            </div>
        </section>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent () }}
    <script>


        $(document).ready( function() {
            $('.mdb-select').material_select();

            $("input[id*='fillInDate']").pickadate({
                format: 'yyyy-mm-dd',
                today: 'Today',
                clear: 'Clear selection',
                close: 'Cancel',

            });

        });

    </script>

{% endblock %}